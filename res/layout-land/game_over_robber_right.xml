<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/game_over_robber_right">

    <Button
            android:layout_width="180dp"
            android:layout_height="70dp"
            android:id="@+id/buttonRetry"
            android:width="180dp"
            android:layout_marginStart="67dp" android:height="70dp"
            android:onClick="onRetryButton"
            android:layout_alignTop="@+id/buttonHome"
            android:layout_alignParentStart="true" android:padding="0dp" android:text="RETRY" android:textSize="60sp"/>
    <Button
            android:layout_width="180dp"
            android:layout_height="70dp"
            android:id="@+id/buttonHome"
            android:layout_marginEnd="70dp" android:height="70dp"
            android:width="180dp"
            android:layout_marginBottom="100dp"
            android:onClick="onHomeButton"
            android:padding="0dp" android:text="HOME" android:textSize="60sp"
            android:layout_alignParentBottom="true" android:layout_alignParentEnd="true"/>
</RelativeLayout>