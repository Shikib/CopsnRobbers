<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/game_over_police_left">

    <Button
            android:layout_width="180dp"
            android:layout_height="70dp"
            android:id="@+id/buttonRetry"
            android:layout_marginStart="67dp"
            android:onClick="onRetryButton"
            android:layout_alignTop="@+id/buttonHome"
            android:layout_alignParentStart="true" android:text="RETRY" android:textSize="60sp" android:padding="0dp"/>
    <Button
            android:layout_width="180dp"
            android:layout_height="70dp"
            android:id="@+id/buttonHome"
            android:layout_marginEnd="68dp"
            android:layout_marginBottom="100dp"
            android:onClick="onHomeButton" android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true" android:text="HOME" android:textSize="60sp" android:padding="0dp"/>
</RelativeLayout>