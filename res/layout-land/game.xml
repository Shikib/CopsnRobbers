<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Button L"
            android:id="@+id/buttonL" android:layout_centerVertical="true" android:layout_alignParentStart="true"/>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Button R"
            android:id="@+id/buttonR" android:layout_alignParentEnd="true" android:layout_centerVertical="true"/>
</RelativeLayout>