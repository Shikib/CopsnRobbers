<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:id="@+id/home_screen" android:background="@drawable/home_v1"
        android:clickable="false">
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button"
                android:layout_marginBottom="50dp" android:layout_gravity="center"
                android:clickable="true" android:width="160dp"
                android:layout_alignParentBottom="true" android:layout_centerHorizontal="true" android:height="55dp"
                android:onClick="onPlayButton"/>
</RelativeLayout>