<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/blue_background">

    <ScrollView
            android:id="@+id/scrollView1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentTop="true" android:layout_alignParentStart="true">
    <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:weightSum="1" android:layout_below="@+id/scrollView1" android:layout_alignParentStart="true">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CHOOSE A MAP:"
                android:id="@+id/textViewSelection" android:layout_alignParentTop="true" android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal" android:textStyle="bold" android:textSize="50sp"/>

        <ImageButton
                android:layout_width="450dp"
                android:layout_height="275dp"
                android:id="@+id/imageButtonMap0" android:layout_centerVertical="true" android:layout_centerHorizontal="true"
                android:onClick="onMap0Button" android:layout_gravity="center_horizontal"
                android:layout_marginBottom="50dp"/>
        <ImageButton
                android:layout_width="450dp"
                android:layout_height="275dp"
                android:id="@+id/imageButtonMap1" android:layout_below="@+id/imageButton0"
                android:layout_centerHorizontal="true" android:layout_gravity="center_horizontal"
                android:onClick="onMap1Button"
                android:layout_marginBottom="50dp"/>
        <ImageButton
                android:layout_width="450dp"
                android:layout_height="275dp"
                android:id="@+id/imageButtonMap2" android:layout_below="@+id/imageButton1"
                android:layout_centerHorizontal="true" android:layout_gravity="center_horizontal"
                android:onClick="onMap2Button" android:adjustViewBounds="false"
                android:layout_marginBottom="50dp"/>
    </LinearLayout>
    </ScrollView>


</RelativeLayout>