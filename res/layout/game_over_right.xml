<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/game_over_right">

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonRetry"
            android:width="180dp"
            android:layout_marginStart="20dp" android:height="70dp"
            android:layout_alignTop="@+id/buttonMainMenu" android:layout_alignParentStart="true"
            android:onClick="onRetryButton"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonMainMenu"
            android:layout_marginEnd="15dp" android:height="70dp"
            android:width="180dp"
            android:layout_marginBottom="115dp" android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true" android:onClick="onMainMenuButton"/>
</RelativeLayout>