<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:id="@+id/home_screen" android:background="@drawable/home"
        android:clickable="false">
        <Button
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:id="@+id/buttonPlay"
                android:layout_gravity="center"
                android:clickable="true" android:width="200dp"
                android:height="75dp"
                android:onClick="onPlayButton"
                android:alpha="0.0"
                android:layout_alignParentTop="true" android:layout_centerHorizontal="true"
                android:layout_marginTop="140dp"/>

        <Button
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:text=""
                android:alpha="0.0"
                android:id="@+id/buttonSettings"
                android:onClick="onSettingsButton"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/buttonPlay" android:layout_above="@+id/buttonStats"/>

        <Button
            android:layout_width="130dp"
            android:layout_height="65dp"
            android:alpha="0.0"
            android:id="@+id/buttonStats"
            android:onClick="onStatisticsButton"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/buttonSettings"
            android:layout_marginBottom="25dp"/>
</RelativeLayout>