<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/blue_background">
    <ScrollView
            android:id="@+id/scrollView1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentTop="true" android:layout_alignParentStart="true">
    <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:weightSum="1" android:layout_alignParentTop="true" android:layout_alignParentStart="true">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CHOOSE A THEME:"
                android:id="@+id/textViewSettings" android:layout_alignParentTop="true" android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal" android:textStyle="bold" android:textSize="50sp"
                android:layout_marginTop="10dp" android:layout_marginBottom="10dp"/>
        <ImageButton
                android:layout_width="450dp"
                android:layout_height="275dp"
                android:background="@drawable/background0"
                android:id="@+id/imageButtonTheme0" android:layout_centerVertical="true" android:layout_centerHorizontal="true"
                android:onClick="onTheme0Button" android:layout_gravity="center_horizontal"
                android:layout_marginBottom="30dp"/>
        <ImageButton
                android:layout_width="450dp"
                android:layout_height="275dp"
                android:background="@drawable/background1"
                android:id="@+id/imageButtonTheme1" android:layout_below="@+id/imageTheme0"
                android:layout_centerHorizontal="true" android:layout_gravity="center_horizontal"
                android:onClick="onTheme1Button"
                android:layout_marginBottom="30dp"/>
        <ImageButton
                android:layout_width="450dp"
                android:layout_height="275dp"
                android:background="@drawable/background2"
                android:id="@+id/imageButtonTheme2" android:layout_below="@+id/imageTheme1"
                android:layout_centerHorizontal="true" android:layout_gravity="center_horizontal"
                android:onClick="onTheme2Button" android:adjustViewBounds="false"
                android:layout_marginBottom="30dp"/>
        <ImageButton
                android:layout_width="450dp"
                android:layout_height="275dp"
                android:background="@drawable/background3"
                android:id="@+id/imageButtonTheme3" android:layout_below="@+id/imageTheme2"
                android:layout_centerHorizontal="true" android:layout_gravity="center_horizontal"
                android:onClick="onTheme3Button" android:adjustViewBounds="false"
                android:layout_marginBottom="30dp"/>
        <Button
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:text="BACK"
                android:id="@+id/buttonBack" android:layout_gravity="center_horizontal"
                android:onClick="onBackButton" android:layout_marginBottom="10dp" android:padding="0dp"
                android:textSize="35sp"/>
    </LinearLayout>
    </ScrollView>
</RelativeLayout>