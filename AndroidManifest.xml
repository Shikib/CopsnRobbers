<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.JassGames.CopsnRobbers">
    <uses-sdk android:minSdkVersion="19"/>
    <application android:icon="@drawable/icon" android:label="@string/app_name">
        <activity android:name=".activity.SplashScreenActivity"
                  android:label="@string/app_name"
                  android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".activity.MainMenuActivity"
                  android:label="@string/app_name"
                  android:screenOrientation="landscape">
        </activity>
        <activity android:name=".activity.SelectionMenuActivity"
                  android:label="@string/app_name"
                  android:screenOrientation="landscape">
        </activity>
        <activity android:name=".activity.StatisticsActivity"
                  android:label="@string/app_name"
                  android:screenOrientation="landscape">
        </activity>
        <activity android:name=".activity.SettingsMenuActivity"
                  android:label="@string/app_name"
                  android:screenOrientation="landscape">
        </activity>
        <activity android:name=".activity.SimpleTagActivity"
                  android:label="@string/app_name"
                  android:screenOrientation="landscape">
        </activity>
        <activity android:name=".activity.GameOverActivity"
                  android:label="@string/app_name"
                  android:screenOrientation="landscape">
        </activity>
    </application>
</manifest>
